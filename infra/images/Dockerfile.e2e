FROM node:24

RUN apt-get update && apt-get install -y -q --no-install-recommends \
        apt-transport-https \
        build-essential \
        ca-certificates \
        curl \
        git \
        make \
        libssl-dev \
        wget

WORKDIR /app

ADD .git .
ADD package.json .
ADD package-lock.json .
ADD Makefile .

RUN make setup
